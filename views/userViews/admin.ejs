
<div class="page-wrap">
    <div class="page-header">
        <div class="container">
            <h1>Admin Dashboard</h1>
        </div>
    </div>
    <div class="container">
      <div class="panel panel-default">

         <div class="panel-heading">
            <? if(typeof message != 'undefined') { ?>
               <p class="lead">Message: <span class="text-warning"><?= message ?></span></p>
            <? }else{ ?>
               <p class="lead text-info">no messages</p>
            <? } ?>
            <? if(typeof error != 'undefined') { ?>
               <p class="lead">Error: <span class="text-danger"><?= error ?></span></p>
            <? }else{ ?>
               <p class="lead text-success">no errors</p>
            <? } ?>
            <? var count = 1; ?>
         </div>
         <div class="panel-body">
             <table class="table table-bordered table-inverse">
                 <thead>
                     <tr>
                         <th>#</th>
                         <th>First Name</th>
                         <th>Last Name</th>
                         <th>Email</th>
                         <th></th>
                         <th></th>
                     </tr>
                 </thead>
                 <tbody>
                     <? users.forEach(function(value) { ?>
                     <tr>
                         <th><?= count++ ?></th>
                         <td><?= value.firstName ?></td>
                         <td><?= value.lastName ?></td>
                         <td><?= value.email ?></td>
                         <form action="/admin/update?uuid=<?= value.uuid ?>" method="post">
                             <td>
                                 <button type="submit" class="btn btn-success">edit</button>
                             </td>
                         </form>
                         <form onsubmit="return confirm('Delete user?');" action="/admin/player/delete?uuid=<?= value.uuid ?>" method="post">
                             <td>
                                 <button type="submit" class="btn btn-danger">delete</button>
                             </td>
                         </form>
                     </tr>
                     <? }) ?>
                 </tbody>
             </table>
         </div>
      </div>
    </div>
</div>
